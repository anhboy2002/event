<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >
    <TextView
        android:id="@+id/tv_top"
        android:background="@color/colorbackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_sologan"
        android:text="@string/sologan"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_sologan"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_below="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_so"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/tv_sologan_result"
            android:layout_width="60dp"
            android:layout_height="@dimen/high_so"
            android:text="Kết quả :"
            android:gravity="center"/>
        <TextView
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/high_result" />


    </LinearLayout>

    <Button
        android:layout_below="@+id/ll_result"
        android:id="@+id/btn_back"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:text="@string/btn_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_result"
        android:onClick="tong1"/>



</RelativeLayout>