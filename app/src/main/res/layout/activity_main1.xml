        <!--android:id="@+id/lv_result"-->
        <!--android:layout_below="@+id/btn_result1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</ListView>-->

    

    </RelativeLayout>